# ===========================================
# AgriBooks Backend Environment Configuration
# ===========================================

# Database Configuration
# For local development: postgresql://user:password@localhost:5432/agribooks?schema=public
# For production: Use a strong password and proper connection string
DATABASE_URL="postgresql://agribooks:your_secure_password@localhost:5432/agribooks?schema=public"

# JWT Secret - IMPORTANT: Generate a strong secret for production
# Run: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET="your-secret-key-change-this-in-production"

# Server Configuration
PORT=3001
NODE_ENV=development
# For production, set to: NODE_ENV=production

# Host configuration (0.0.0.0 allows external connections)
HOST=0.0.0.0

# Logging
# Options: error, warn, info, http, verbose, debug, silly
LOG_LEVEL=info

# File Upload Configuration
UPLOAD_DIR="./uploads"
MAX_FILE_SIZE=5242880

# CORS Configuration (comma-separated origins for production)
# Example: CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_ORIGINS=*

# Rate Limiting (optional)
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100