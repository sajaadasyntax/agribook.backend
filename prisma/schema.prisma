// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String    @id @default(uuid())
  email         String?   @unique
  name          String?
  phone         String?
  companyName   String?
  logoUrl       String?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  
  transactions  Transaction[]
  alerts        Alert[]
  reminders     Reminder[]
  settings      UserSettings?
  
  @@map("users")
}

model Category {
  id          String   @id @default(uuid())
  name        String
  type        CategoryType
  description String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  transactions Transaction[]
  
  @@unique([name, type])
  @@map("categories")
}

enum CategoryType {
  INCOME
  EXPENSE
}

model Transaction {
  id          String        @id @default(uuid())
  type        TransactionType
  amount      Decimal       @db.Decimal(10, 2)
  description String?
  categoryId  String
  userId      String
  receiptUrl  String?
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt
  
  category    Category      @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  user        User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, createdAt])
  @@index([type, createdAt])
  @@map("transactions")
}

enum TransactionType {
  INCOME
  EXPENSE
}

model Alert {
  id        String      @id @default(uuid())
  type      AlertType
  message   String
  userId    String
  isRead    Boolean     @default(false)
  createdAt DateTime    @default(now())
  
  user      User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, isRead])
  @@map("alerts")
}

enum AlertType {
  WARNING
  ERROR
  INFO
  SUCCESS
}

model Reminder {
  id          String    @id @default(uuid())
  title       String
  description String?
  dueDate     DateTime
  completed   Boolean   @default(false)
  userId      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([userId, completed, dueDate])
  @@map("reminders")
}

model UserSettings {
  id                    String   @id @default(uuid())
  userId                String   @unique
  language              String   @default("en")
  darkMode              Boolean  @default(false)
  autoBackup            Boolean  @default(true)
  offlineMode           Boolean  @default(true)
  autoSync              Boolean  @default(true)
  pushNotifications     Boolean  @default(true)
  emailNotifications    Boolean  @default(false)
  expenseThresholdAlert Boolean  @default(true)
  expenseThreshold      Decimal? @db.Decimal(10, 2)
  pinEnabled             Boolean  @default(false)
  pinHash               String?
  fingerprintEnabled     Boolean  @default(false)
  createdAt             DateTime @default(now())
  updatedAt             DateTime @updatedAt
  
  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@map("user_settings")
}

